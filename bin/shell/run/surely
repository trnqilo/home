[[ "$surely" == 'skip' ]] && exit

[[ "$1" == 'sure' ]] && shift && choices='[Y/n]' || choices='[y/N]'

message="${@:-proceed}"
read -p "$message? $choices " selection

if [[ "$choices" == '[Y/n]' ]]; then selection="${selection:-y}"; fi

[[ "`to lower $selection`" =~ ^y(es)?$ ]] || exit 1
