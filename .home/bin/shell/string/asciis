#!/usr/bin/env bash

function beastie { echo '
```                        `
 s` `.....---.......--.```   -/
 +o   .--`         /y:`      +.
  yo`:.            :o      `+-
   y/               -/`   -o/
  .-                  ::/sy+:.
  /                     `--  /
 `:                          :`
 `:                          :`
  /                          /
  .-                        -.
   --                      -.
    `:`                  `:`
      .--             `--.
         .---.....----.
'
}

