function redhat { echo '
            .###..:#######
          ##################
          ####################.
         ######################
        ,######################:
        ########################
  .####`  ######################
 ######    `####################.
########      ################## .
#########.       `#############` ##.
###########.                     ####
`#############.                 ,#####.
 `#################.          ,########.
    ####################################
      #################################:
         ##############################
            `########################:
                ``#################`
'
}

function pi { echo '
  `.::///+:/-.        --///+//-:``
 `+oooooooooooo:   `+oooooooooooo:
  /oooo++//ooooo:  ooooo+//+ooooo.
  `+ooooooo:-:oo-  +o+::/ooooooo:
   `:oooooooo+``    `.oooooooo+-
     `:++ooo/.        :+ooo+/.`
        ...`  `.----.` ``..
     .::::-``:::::::::.`-:::-`
    -:::-`   .:::::::-`  `-:::-
   `::.  `.--.`  `` `.---.``.::`
       .::::::::`  -::::::::` `
 .::` .:::::::::- `::::::::::``::.
-:::` ::::::::::.  ::::::::::.`:::-
::::  -::::::::.   `-::::::::  ::::
-::-   .-:::-.``....``.-::-.   -::-
 .. ``       .::::::::.     `..`..
   -:::-`   -::::::::::`  .:::::`
   :::::::` -::::::::::` :::::::.
   .:::::::  -::::::::. ::::::::
    `-:::::`   ..--.`   ::::::.
      `...`  `...--..`  `...`
            .::::::::::
             `.-::::-`
'
}

parrot bright,${2:-$PROMPT_COLOR} "`${1:-beastie}`"
