function format { echo "${@//"'"/"'\"'\"'"}"; }

if [[ "$1" ]]; then cd "$@"; fi; dir="`pwd`"
echo; script=''
if surely sure "# find duplicate files in '$dir'"; then
  echo "# searching..."
  print="`dupefiles`"
  if [[ "$print" ]]; then print="# files\n$print\n"
  else print='# zero files\n'; fi
  echo -e "$print"
  script+="$print"
fi

# if surely sure "# find empties in '$dir'"; then
