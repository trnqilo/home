#!/usr/bin/env bash
set -e

function dupefiles {
  function dupefiles { sum="$1"; shift; dupe_file="$@"; }
  while read dupe; do dupefiles $dupe
    if [[ "$dupe_file" ]]; then echo "# rm -vf '`format $dupe_file`' # $sum"; fi
  done <<< "`find "$dir" -type f -exec md5sum {} + | grep -v '^$' | sort | uniq -w32 -dD`"
}

