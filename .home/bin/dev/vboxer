#!/usr/bin/env bash
set -e

if [[ "$1" == '-h' || "$2" == '-h' ]]; then
  headless='--type headless'; [[ "$1" == '-h' ]] && shift
fi

function list_vms { VBoxManage list vms | $awk -F\" '{print $2}'; }
function list_runningvms { VBoxManage list runningvms | $awk -F\" '{print $2}'; }
function vm_named { list_vms | grep "$1" | head -1; }

if [[ ! "$1" ]]; then echo vms:;list_vms;echo $'\nrunning:';list_runningvms
elif [[ "$1" == 'fix' ]]; then sudo rmmod kvm_intel kvm
elif [[ "$1" == 'info' ]]; then VBoxManage list systemproperties
elif [[ "$1" == 'zzz' ]]; then VBoxManage controlvm `vm_named $2` savestate
elif [[ "$1" == 'off' ]]; then VBoxManage controlvm `vm_named $2` acpipowerbutton
elif [[ "$1" == 'halt' ]]; then VBoxManage controlvm `vm_named $2` poweroff
elif [[ "$1" == *'.img' ]]; then VBoxManage convertfromraw "$1" "${1//.img/.vdi}" --format VDI
elif [[ "$1" == *'.vdi' ]]; then VBoxManage clonehd "$1" "${1//.vdi/.img}" --format RAW
elif [[ "$1" == 'ssh' ]]; then VBoxManage startvm `vm_named $2` --type headless &>/dev/null ||:
  until ssh localhost -p ${3:-2222} echo; do printf .; sleep 1; done
  ssh localhost -p ${3:-2222}
elif [[ "$1" == 'edit' ]]; then set -uo pipefail
  VBoxManage showvminfo "`vm_named "$2"`" --machinereadable | grep 'CfgFile=' \
    | $sed 's|CfgFile=||;s|"||g' | if read path; then ${edi:-vim} "$path" < /dev/tty; fi
else VBoxManage startvm `vm_named $1` $headless; fi
