#!/usr/bin/env bash
set -e

if [[ "$powercheck" == true ]]; then surely `basename $0` || exit; fi

sleep ${1:-0}
$onoff

if whereami darwin; then
  osascript -e 'tell app "loginwindow" to «event aevtrrst»'
elif whereami linux bsd; then
  sudo shutdown -r now
elif whereami windows; then
  shutdown -r -t 0
else
  sudo reboot
fi
